<config>
    <modules>
        <Oggetto_Newsblock>
            <version>1.0.0</version>
        </Oggetto_Newsblock>
    </modules>
    <global>
        <blocks>
            <newsblock>
                <class>Oggetto_Newsblock_Block</class>
            </newsblock>
        </blocks>
        <models>
            <newsblock>
                <class>Oggetto_Newsblock_Model</class>
                <resourceModel>newsblock_resource</resourceModel>
            </newsblock>
            <newsblock_resource>
                <class>Oggetto_Newsblock_Model_Resource</class>
                <entities>
                    <item>
                        <table>oggetto_newsblock</table>
                    </item>
                </entities>
            </newsblock_resource>
        </models>
        <resources>
            <newsblock_setup>
                <setup>
                    <module>Oggetto_Newsblock</module>
                </setup>
            </newsblock_setup>
        </resources>
        <helpers>
            <newsblock>
                <class>Oggetto_Newsblock_Helper</class>
            </newsblock>
        </helpers>
    </global>
    <frontend>
        <routers>
            <newsblock>
                <use>standard</use>
                <args>
                    <module>Oggetto_Newsblock</module>
                    <frontName>newsblock</frontName>
                </args>
            </newsblock>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <newsblock_module after="Mage_Adminhtml">Oggetto_Newsblock_Adminhtml</newsblock_module>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <newsblock>
            <settings>
                <enabled>1</enabled>
                <news_count>10</news_count>
            </settings>
        </newsblock>
    </default>
</config>