<config>
    <modules>
        <Oggetto_BestModule>
            <version>0.0.3</version>
        </Oggetto_BestModule>
    </modules>
    <frontend>
        <layout>
            <updates>
                <oggetto_bestmodule>
                    <file>bestmodule.xml</file>
                </oggetto_bestmodule>
            </updates>
        </layout>
    </frontend>
    <global>
        <fieldsets>
            <sales_convert_quote_address>
                <delivery_instruction>
                    <to_order_address>*</to_order_address>
                </delivery_instruction>
            </sales_convert_quote_address>
        </fieldsets>
        <models>
            <bestmodule>
                <class>Oggetto_BestModule_Model</class>
            </bestmodule>
            <bestpayment>
                <class>Oggetto_BestModule_Model_Payment</class>
            </bestpayment>
        </models>
        <resources>
            <bestmodule_setup>
                <setup>
                    <module>Oggetto_BestModule</module>
                </setup>
            </bestmodule_setup>
        </resources>
        <blocks>
            <checkout>
                <rewrite>
                    <onepage>Oggetto_BestModule_Block_Checkout_Onepage</onepage>
                </rewrite>
            </checkout>
            <bestpayment>
                <class>Oggetto_BestModule_Block_Payment</class>
            </bestpayment>
            <adminhtml>
                <rewrite>
                    <sales_order_create_search_grid>Oggetto_BestModule_Block_Sales_Order_Create_Search_Grid</sales_order_create_search_grid>
                    <sales_order_address_form>Oggetto_BestModule_Block_Sales_Order_Address_Form</sales_order_address_form>
                </rewrite>
            </adminhtml>
        </blocks>
        <events>
            <controller_action_postdispatch_checkout_onepage_savePayment>
                <observers>
                    <bestmodule>
                        <type>singleton</type>
                        <class>Oggetto_BestModule_Model_Observer</class>
                        <method>saveOrder</method>
                    </bestmodule>
                </observers>
            </controller_action_postdispatch_checkout_onepage_savePayment>
        </events>
        <helpers>
            <bestmodule>
                <class>Oggetto_BestModule_Helper</class>
            </bestmodule>
        </helpers>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <oggetto_bestmodule>
                    <file>bestmodule.xml</file>
                </oggetto_bestmodule>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <addIsBestColumnToHtml>
                        <type>singleton</type>
                        <class>Oggetto_BestModule_Model_Observer</class>
                        <method>beforeBlockToHtml</method>
                    </addIsBestColumnToHtml>
                </observers>
            </core_block_abstract_to_html_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <addIsBestToCollection>
                        <class>Oggetto_BestModule_Model_Observer</class>
                        <method>beforeCollectionLoad</method>
                    </addIsBestToCollection>
                </observers>
            </eav_collection_abstract_load_before>
        </events>
    </adminhtml>
    <default>
        <payment>
            <bestpayment>
                <active>1</active>
                <model>Oggetto_BestModule_Model_Payment</model>
                <title>BestPayment</title>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
                <group>offline</group>
            </bestpayment>
        </payment>
        <carriers>
            <bestshipping>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>Oggetto_BestModule_Model_Shipment</model>
                <name>standard</name>
                <ratio>1</ratio>
                <type>O</type>
                <sort_order>10</sort_order>
                <title>Best Shipment</title>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <handling_type>F</handling_type>
            </bestshipping>
        </carriers>
    </default>
</config>