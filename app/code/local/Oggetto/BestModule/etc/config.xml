<config>
    <modules>
        <Oggetto_BestModule>
            <version>0.0.1</version>
        </Oggetto_BestModule>
    </modules>
    <frontend>
    </frontend>
    <global>
        <models>
            <bestmodule>
                <class>Oggetto_BestModule_Model</class>
            </bestmodule>
            <bestpayment>
                <class>Oggetto_BestModule_Model_Payment</class>
            </bestpayment>
        </models>
        <resources>
            <bestmodule_setup>
                <setup>
                    <module>Oggetto_BestModule</module>
                </setup>
            </bestmodule_setup>
        </resources>
        <blocks>
            <checkout>
                <rewrite>
                    <onepage>Oggetto_BestModule_Block_Checkout_Onepage</onepage>
                </rewrite>
            </checkout>
            <bestpayment>
                <class>Oggetto_BestModule_Block_Payment</class>
            </bestpayment>
        </blocks>
        <events>
            <controller_action_postdispatch_checkout_onepage_savePayment>
                <observers>
                    <bestmodule>
                        <type>singleton</type>
                        <class>Oggetto_BestModule_Model_Observer</class>
                        <method>saveOrder</method>
                    </bestmodule>
                </observers>
            </controller_action_postdispatch_checkout_onepage_savePayment>
        </events>
        <helpers>
            <bestmodule>
                <class>Oggetto_BestModule_Helper</class>
            </bestmodule>
        </helpers>
    </global>
    <adminhtml>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <addIsBestColumnToHtml>
                        <type>singleton</type>
                        <class>Oggetto_BestModule_Model_Observer</class>
                        <method>beforeBlockToHtml</method>
                    </addIsBestColumnToHtml>
                </observers>
            </core_block_abstract_to_html_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <addIsBestToCollection>
                        <class>Oggetto_BestModule_Model_Observer</class>
                        <method>beforeCollectionLoad</method>
                    </addIsBestToCollection>
                </observers>
            </eav_collection_abstract_load_before>
        </events>
    </adminhtml>
    <default>
        <payment>
            <bestpayment>
                <active>1</active>
                <model>Oggetto_BestModule_Model_Payment</model>
                <title>BestPayment</title>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
                <group>offline</group>
            </bestpayment>
        </payment>
    </default>
</config>