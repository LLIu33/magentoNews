<config>
    <modules>
        <Oggetto_Shield>
            <version>0.0.1</version>
        </Oggetto_Shield>
    </modules>
    <frontend>
    </frontend>
    <global>
        <helpers>
            <shield>
                <class>Oggetto_Shield_Helper</class>
            </shield>
        </helpers>
        <models>
            <shield>
                <class>Oggetto_Shield_Model</class>
            </shield>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Oggetto_Shield>
                    <files>
                        <default>Oggetto_Shield.csv</default>
                    </files>
                </Oggetto_Shield>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <shield>
                                            <title>Shield - All</title>
                                        </shield>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <admin>
            <security>
                <wrong_password_flow_secure>1</wrong_password_flow_secure>
                <requests_from_ip>5</requests_from_ip>
                <blocking_period_for_ip>5</blocking_period_for_ip>
                <requests_from_email>5</requests_from_email>
                <blocking_period_for_email>5</blocking_period_for_email>
            </security>
        </admin>
    </default>
</config>