<config>
    <modules>
        <Oggetto_MultipleFilter>
            <version>0.0.1</version>
        </Oggetto_MultipleFilter>
    </modules>
    <global>
        <blocks>
            <multiplefilterblock>
                <class>Oggetto_MultipleFilter_Block</class>
            </multiplefilterblock>
        </blocks>
        <helpers>
            <multichoice>
                <class>Oggetto_MultipleFilter_Helper</class>
            </multichoice>
        </helpers>
        <models>
            <multiplefilter>
                <class>Oggetto_MultipleFilter_Model</class>
            </multiplefilter>
        </models>
        <resources>
            <multiplefilter_setup>
                <setup>
                    <module>Oggetto_MultipleFilter</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </multiplefilter_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <adminhtml_catalog_product_attribute_edit_prepare_form>
                <observers>
                    <multiplefilter>
                        <type>singleton</type>
                        <class>multiplefilter/observer</class>
                        <method>addFieldToAttributeEditForm</method>
                    </multiplefilter>
                </observers>
            </adminhtml_catalog_product_attribute_edit_prepare_form>
        </events>
    </adminhtml>
</config>